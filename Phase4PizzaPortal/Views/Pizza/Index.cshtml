@model IEnumerable<Phase4PizzaPortal.Models.PizzaModel>

@{
    ViewData["Title"] = "Index";
}

<html>

<head>

    <style>

        #top {
            background-color: #8E05C2;
        }

        #heading1 {
            padding-top: 2rem;
            color: white;
            font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        }

        #heading2 {
            padding-top: .5rem;
            color: white;
            font-family: 'Agency FB';
            padding-bottom: 2rem;
        }

        #cartSection {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }


        #pizza {
            margin-top: 2rem;
            margin-bottom: 5rem;
        }

        #pizzaItems {
            margin-top: 1rem;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>

<body>
    <div id="top" class="container">
        <h3 id="heading1">Hello, it is our pleasure to have you as Customer...!</h3>
        <h5 id="heading2">Enjoy your pizza by ordering</h5>
    </div>

    <div id="pizza" class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div id="pizzaItems" class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.PImage" alt="Pizza Image" height="200" /><hr />

                        <div class="card-body" style="height:200px">
                            <h4 style="font-family:'Times New Roman', Times, serif">@Html.DisplayFor(modelItem => item.PName)</h4>

                            <p class="text-muted">Crust Size: @item.PCrustSize </p>

                            <p class="card-text" style="font-family:'Times New Roman', Times, serif">
                                @if (item.PDesc.Length > 50)
                                {
                                    @(item.PDesc.Substring(0,49) + "..." )
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.PDesc)
                                }
                            </p>

                            <div class=" justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a id="@item.PId" class="btn btn-sm btn-primary" onclick="javacript:DisplayMessage()" asp-action="Order" asp-route-id="@item.PId">Order Pizza</a>
                                </div>
                                <small class="text-muted" style="float:right"> @Html.DisplayFor(modelItem => item.PPrice) rs</small>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>

</html>